{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@common/*": ["common/*"],
      "@utils/*": ["common/utils/*"],
      "@database/*": ["database/*"],
      "@models/*": ["database/models/*"],
      "@routes/*": ["modules/*"],
      "@controllers/*": ["modules/*"],
      "@middlewares/*": ["middlewares/*"],
      "@enums/*": ["common/enums/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "@types"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
