{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@common/*": ["common/*"],
      "@utils/*": ["common/utils/*"],
      "@database/*": ["database/*"],
      "@models/*": ["database/models/*"],
      "@routes/*": ["modules/*"],
      "@controllers/*": ["modules/*"],
      "@middlewares/*": ["middlewares/*"],
      "@enums/*": ["common/enums/*"],
      "@mailers/*": ["mailers/*"]
    },
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/@types/**/*.d.ts"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
